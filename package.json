    "dev": "tsc --watch",
    "build": "tsc",
    "prepare": "npm run build"
  },
  "standard": {
    "globals": [
      "browser",
      "chrome"
    ],
    "ignore": [
      "**/dist",
      "**/node_modules"
    ]
  },
